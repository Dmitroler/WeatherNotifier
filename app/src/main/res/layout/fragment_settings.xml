<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/settings_background1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.finalProject.dmitroLer.weathernotifier.NotificationSettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:alpha="0.9"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/settingicon" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="@string/characteristic"
                    android:textColor="@color/titlesColor"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.5"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/linesColor"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:textSize="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="5dp"

                    android:backgroundTint="#0cffffff"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skin_color"
                            android:layout_marginLeft="5dp"
                            android:textSize="18dp"
                            android:textColor="@color/textColor" />

                        <Spinner

                            android:id="@+id/skin_spinner"
                            android:layout_width="75dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@null"
                            android:popupBackground="@color/colorPrimary"
                            android:backgroundTint="#ffffff"
                            android:gravity="center"
                            android:textColor="@color/colorWhite" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:alpha="0.5"
                        android:background="@color/smallLinesColor" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Eyes_color"
                            android:textSize="18dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/textColor" />

                        <Spinner
                            android:id="@+id/eye_spinner"
                            android:layout_width="75dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:popupBackground="@color/colorPrimary"
                            android:backgroundTint="#ffffff"
                            android:background="@null"
                            android:gravity="center"
                            android:textColor="@color/colorWhite" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:alpha="0.5"
                        android:background="@color/smallLinesColor" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/weight"
                            android:textSize="18dp"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/textColor" />

                        <EditText
                            android:id="@+id/edittexweight"
                            android:layout_width="71dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"
                            android:background="@color/settingsbackColor"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="18dp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:alpha="0.5"
                        android:background="@color/smallLinesColor" />





                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/age_text"
                            android:textSize="18dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/textColor" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"></LinearLayout>

                        <EditText
                            android:id="@+id/edittextage"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@color/settingsbackColor"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:textColor="@color/textColor" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:text="Cloth"
                            android:textColor="@color/textColor"
                            android:visibility="gone" />

                        <Spinner
                            android:id="@+id/cloth_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:backgroundTint="#1AFFFFFF"
                            android:gravity="center"
                            android:popupBackground="#06395c"
                            android:textColor="@color/colorWhite"
                            android:visibility="gone" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:text="Hair Color"
                            android:textColor="@color/textColor"
                            android:visibility="gone" />

                        <Spinner
                            android:id="@+id/hair_spinner"
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:backgroundTint="#1AFFFFFF"
                            android:gravity="center"
                            android:popupBackground="#06395c"
                            android:textColor="@color/colorWhite"
                            android:visibility="gone" />
                    </RelativeLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:alpha="0.9"
                        android:layout_gravity="center_vertical|left"
                        app:srcCompat="@drawable/selectionicon" />
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:paddingLeft="5dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/tracking_list"
                        android:textColor="@color/titlesColor"
                        android:textSize="20dp"
                        android:theme="@android:style/Theme.Holo" />


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginBottom="10dp"
                    android:alpha="0.5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/linesColor"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="10dp"

                    android:backgroundTint="#0cffffff"
                    android:theme="@android:style/Theme.Holo">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingRight="5dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:id="@+id/option_uv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:button="@null"
                            android:textSize="18dp"
                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                            android:gravity="left|center_vertical"
                            android:text="@string/option_uv"
                            android:textAlignment="textStart"
                            android:textColor="@color/textColor" />

                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:alpha="0.5"
                        android:background="@color/smallLinesColor" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingRight="5dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:id="@+id/option_rain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:button="@null"
                            android:textSize="18dp"
                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                            android:gravity="left|center_vertical"
                            android:text="@string/option_rain"
                            android:textAlignment="textStart"
                            android:textColor="@color/textColor" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:alpha="0.5"
                        android:background="@color/smallLinesColor" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingRight="5dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:id="@+id/option_humidity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textSize="18dp"
                            android:button="@null"
                            android:checked="true"
                            android:layout_marginLeft="5dp"
                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                            android:gravity="left|center_vertical"
                            android:text="@string/option_humidity"
                            android:textAlignment="textStart"
                            android:textColor="@color/textColor" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:alpha="0.5"
                        android:background="@color/smallLinesColor" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:id="@+id/option_temperature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textSize="18dp"
                            android:layout_weight="1"
                            android:button="@null"
                            android:layout_marginLeft="5dp"
                            android:checked="true"
                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                            android:gravity="left|center_vertical"
                            android:text="@string/option_temperature"
                            android:textColor="@color/textColor" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:alpha="0.5"
                        android:background="@color/smallLinesColor" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingRight="5dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:id="@+id/option_wind"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="5dp"
                            android:textSize="18dp"
                            android:layout_weight="1"
                            android:button="@null"
                            android:checked="true"
                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                            android:gravity="left|center_vertical"
                            android:text="@string/option_wind"
                            android:textColor="@color/textColor" />
                    </RelativeLayout>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"

                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imageView21"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:alpha="0.9"
                            android:layout_gravity="center_vertical|left"
                            app:srcCompat="@drawable/updateicon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"

                            android:paddingLeft="5dp"
                            android:text="@string/forecast_updates"
                            android:textColor="@color/titlesColor"
                            android:textSize="20dp"
                            android:layout_marginRight="5dp"
                            android:theme="@android:style/Theme.Holo" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:alpha="0.5"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/linesColor"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"

                    android:orientation="vertical"

                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="5dp"

                    android:backgroundTint="#0cffffff">




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/updatetimespinnertext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:foregroundGravity="center_vertical|left"
                            android:text="@string/time_interval"
                            android:gravity="center_vertical|left"
                            android:layout_weight="0.7"
                            android:textColor="@color/textColor" />

                        <Spinner
                            android:id="@+id/timeIntervalspinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:layout_gravity="center_vertical|right"
                            android:layout_alignParentRight="true"
                            android:backgroundTint="@color/transparent"
                            android:gravity="center_vertical|right"
                            android:textColor="@color/textColor"
                            android:background="@color/colorPrimaryDark"
                            android:textAlignment="center"
                            />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:alpha="0.5"
                    android:background="@color/linesColor" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Updated"
                        android:textSize="15dp"
                        android:textColor="@color/textColor" />

                    <TextView
                        android:id="@+id/last_updated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="15dp"
                        android:text="06 06 2018"
                        android:textColor="@color/textColor" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:alpha="0.5"
                    android:background="@color/linesColor" />

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textSize="18dp"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@drawable/misc_location_bubble"
                   />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

